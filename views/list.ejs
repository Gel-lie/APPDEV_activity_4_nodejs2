<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration List</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to bottom, black, lightpink); /* Black to faded light pink */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-attachment: fixed;
        }

        .card {
            background-color: #000000; /* Black card background */
            border-radius: 16px;
            border: 2px solid #ff007f; /* Neon pink border */
            box-shadow: 0 0 20px rgba(255, 0, 127, 0.8); /* Neon pink glow */
            padding: 30px;
            max-width: 700px;
            width: 100%;
            margin-top: 40px;
            text-align: center;
        }

        h1 {
            color: white; /* White heading */
            font-size: 1.8em;
            margin-bottom: 20px;
            font-weight: 600;
        }

        table {
            width: 100%;
            border-collapse: collapse; /* Ensure borders don't overlap */
            table-layout: fixed; /* Equal column width */
        }

        table th, table td {
            border: 1px solid #ff007f; /* Neon pink borders */
            padding: 15px;
            text-align: center;
            color: #ffffff; /* White text */
            width: 20%; /* Equal width for all columns */
            word-wrap: break-word; /* Break words that are too long */
            overflow: hidden; /* Hide overflow */
            text-overflow: ellipsis; /* Add ellipsis for overflowed text */
        }

        table th {
            background-color: #1a1a1a; /* Darker background for table headers */
            font-weight: bold;
        }

        table td {
            background-color: #333333; /* Dark gray for table rows */
            vertical-align: middle; /* Ensure all content is vertically aligned */
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%; /* Make sure it takes up the full cell height */
            gap: 10px;
        }

        .button {
            background-color: #ff007f; /* Neon pink button */
            color: white;
            border: none;
            border-radius: 20px;
            padding: 8px 12px;
            cursor: pointer;
            transition: 0.3s;
            text-shadow: 0 0 10px #ff007f; /* Neon glow effect */
        }

        .button:hover {
            background-color: #ff1ac9; /* Brighter neon pink on hover */
            box-shadow: 0 0 20px #ff007f; /* Stronger neon glow on hover */
        }

        .delete-button {
            background-color: #ff007f;
        }

        .delete-button:hover {
            background-color: #ff1ac9;
            box-shadow: 0 0 20px #ff007f;
        }

        a {
            text-decoration: none;
            color: white;
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>USER REGISTRATION LIST</h1>
        <br>
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
            <% information.forEach(info => { %>
            <tr>
                <td><%= info.firstname %></td>
                <td><%= info.lastname %></td>
                <td><%= info.email %></td>
                <td><%= info.gender %></td>
                <td>
                    <div class="action-buttons">
                        <button class="button">
                            <a href="/edit/<%= info.id %>">Edit</a>
                        </button>
                        <button class="button delete-button">
                            <a href="/delete/<%= info.id %>">Delete</a>
                        </button>
                    </div>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
